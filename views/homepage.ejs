<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;

        }

        .container {
            max-width: center;
            margin: 0 auto;
            text-align: center;
        }

        .header {
            margin-bottom: 20px;
        }

        .header h1 {
            font-size: 36px;
            margin-bottom: 10px;
        }

        .header p {
            font-size: 18px;
            color: #555;
        }

        .buttons {
            margin-top: 30px;
        }

        .buttons a {
            display: inline-block;
            margin: 0 10px;
            padding: 10px 20px;
            background-color: #2196F3;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .buttons a:hover {
            background-color: #1976D2;
        }
    </style>
</head>

<body>
    <div id="content">
        <div class="container">
            <div class="header">
                <h1>Blog Sitesine Hoş Geldiniz</h1>
                <p>En güncel yazıları okuyun ve düşüncelerinizi paylaşın.</p>
            </div>
            <div class="buttons">
                <a href="/login">Giriş Yap</a>
                <a href="/register">Kaydol</a>
                <button id="fetchUserPageBtn">Fetch User Data</button>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('fetchUserPageBtn').addEventListener('click', async () => {
            await fetchUserPage();
        })

        async function fetchUserPage() {

            const response = await fetch('/users', {
                method: 'GET',
                headers: {
                    'authorization': `bear eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJlbWFpbCI6Im11aGFtbWVkX19AZ21haWwuY29tIiwiaWF0IjoxNzE4NDY5ODgzLCJleHAiOjE3MTg0NzM0ODN9.fMXGI8uJtxFyVVCbvt4I3lYNadIf3hIvi5F1d9LknK4`
                }
            });

            const html = await response.text();
            document.getElementById('content').innerHTML = html
        }
    </script>
</body>

</html>